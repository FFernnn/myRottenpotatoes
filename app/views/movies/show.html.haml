%h2 Details about #{@movie.title}

%ul 
    %li
        Rating:
        = @movie.rating
    %li
        Released on:
        = @movie.release_date.strftime("%B %d, %Y")
        
%h3 Description:



= button_to('Back to movie list', movies_path, :method => :get, class: "waves-effect waves-light btn")
= button_to('Edit info', edit_movie_path(@movie), :method => :get, class: "waves-effect waves-light btn") 
= button_to('Delete', movie_path(@movie), :method => :delete, class: "waves-effect waves-light btn")


